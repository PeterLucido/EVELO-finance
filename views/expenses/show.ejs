<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/expenses/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <%= expense.title %>
    <a href="/expenses/<%= expense._id %>/edit">
      <button>Edit Expense</button>
    </a>
    <div>Expense: </div>
    <div><%= expense.category %></div>
    <div>Cost: </div>
    <div><%= expense.amount %></div>

    <h2>Comments</h2>
  <form 
    id="add-comment-form"
    action="/expenses/<%= expense._id %>/comments"
    method="POST"
  >
    <label for="comment-input"></label>
    <input name="comment" id="comment-input"></input>

    <button type="submit">Add Comment</button>
  </form>
  <% if (expense.comments.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Comment</th>
        </tr>
      </thead>
      <tbody>
        <% expense.comments.forEach(function(comment) { %>
          <tr>
            <td><%= comment.comment %></td>
            <form action="/expenses/<%= expense._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
              <button>X</button>
            </form>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Comments Yet</h3>
  <% } %>
</main>
  
<%- include('../partials/footer') %>