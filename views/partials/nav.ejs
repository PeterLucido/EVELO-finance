  <% if (!user) { %>
    <script defer src="https://accounts.google.com/gsi/client"></script>
  <% } %>
</head>
<body>
  <nav>
    <% if (user) { %>
      <a href="/">
        <img id="app-logo" src="/images/logo.png" alt="mtn-logo">
      </a>
    <a 
      href="/expenses/new" class=<%= title === 'Add Expense' ? 'active' : '' %>
    >
      ADD EXPENSE
    <a 
      href="/expenses" class=<%= title === 'All Expenses' ? 'active' : '' %> 
    >
      ALL EXPENSES
      
      <span class="<%= title === 'Log Out' ? 'active' : '' %>">
        <a href="/auth/logout">LOG OUT</a>
      </span>

    <% } else { %>
      <div 
        id="g_id_onload"
        data-client_id="<%= googleClientID %>"
        data-login_uri="/auth/google"
        data-auto_prompt="false"
        data-prompt_parent_id="g_id_onload"
      ></div>
      <div 
        class="g_id_signin right"
        data-type="standard"
        data-size="medium"
        data-theme="outline"
        data-text="sign_in_with"
        data-shape="rectangular"
        data-logo_alignment="left"
      ></div>
    <% } %>
  </nav>
